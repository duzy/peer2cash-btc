project (tools/gcc/c++)

CXXFLAGS += $(@->variant_cflags)
CXXFLAGS += -DLEVELDB_PLATFORM_POSIX
CXXFLAGS += -I"$(dirdir $/)" -I"$(dirdir $/)/include"

lib := libmemenv.a
objects := memenv.o

$(lib): lib.a($(lib) $(objects))

clean:[(shell -oe)]
	@echo "clean: $." && rm -vf *.a *.o

use:
	CXXFLAGS += -I"$/"
	LDFLAGS += -L"$/"
	LDLIBS += -lmemenv
